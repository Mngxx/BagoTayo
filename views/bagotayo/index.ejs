<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/index.css">

    <main>
        <section class="title">
            <h1 class="title-text">BAGO TAYO</h1>
            <p class="title-p">"Youth in Innovative Governance."</p>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 30 1440 200">
                <path fill-opacity="1"
                    d="M0,224L120,197.3C240,171,480,117,720,85.3C960,53,1200,43,1320,37.3L1440,32L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z">
                </path>
            </svg>
        </section>
        <button class="header px-5" disabled>Featured</button>
        <section class="content pb-3 mb-5 c-grid">
            <% for(let i = 0; i<numarr; i++){%>
                <div class="card feat_card">
                    <% if(arr[i][5] == "Videos"){  %> 
                    <iframe class="feat_cardcontent" src="<%=arr[i][3]%>" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                    <% } %>
                    <% if(arr[i][5] == "Publications"){  %> 
                        <img class="feat_cardcontent" src="<%=arr[i][3]%>" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></img>
                    <% } %>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title"><%=arr[i][2]%></h5>
                            <p class="card-text"><%=arr[i][0]%></p>
                            <p class="card-text"><%=arr[i][1]%></p>
                        </div>
                        
                        <a href="<%=arr[i][4]%>" target="_blank" class="btn feat_btn">Go to media</a>
                    </div>
                </div>
            <% } %>  
        </section>
    </main>
    <script>
        window.top.document.title = "Homepage";
      </script>